@model IEnumerable<OficioMVC.Models.Documento>

<style src="~/css/index-doc.css"></style>
<p>
    <button type="button" class="btn btn-danger" asp-action="CreateEdital">Novo Edital</button>
    <button type="button" class="btn btn-outline-danger" asp-action="CreateOficio">Novo Oficio</button>
    <button type="button" class="btn btn-danger" asp-action="CreateMemorando">Novo Memorando</button>
    <button type="button" class="btn btn-outline-danger" asp-action="CreatePortaria">Novo Portaria</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numeracao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assunto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacoes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEnvio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAlteracao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numeracao) /@Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assunto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacoes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEnvio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAlteracao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.user_login)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/images/Icons/edit-2.svg" width="20px" height="20px"></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><img src="~/images/Icons/search-outline.svg" width="20px" height="20px"></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/images/Icons/trash-2-outline.svg" width="20px" height="20px"></a>
            </td>
        </tr>
}
    </tbody>
</table>