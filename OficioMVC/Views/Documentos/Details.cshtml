@model OficioMVC.Models.Documento

@{
    ViewData["Title"] = "Consulta Documento";
}
<link rel="stylesheet" type="text/css" href="~/css/Documentos/delete.css">
<div class="col-md-8 offset-md-2">
    <h1 class="col-md-8 offset-md-3">Consultar Documento</h1>
  <hr class="my-5">

  <!-- form user info -->
  <div class="card card-outline-secondary">
      <div class="card-header">
          <h3 class="mb-0">Documento - @Html.DisplayFor(model => model.Numeracao)/ @Html.DisplayFor(model => model.Ano) - @Html.DisplayFor(model => model.Usuario.user_nicename) </h3>
      </div>
      <div class="card-body">
<div class="row">
    <div class="col-md-12">
      
            <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label">Assunto</label>
                <div class="col-lg-9">   
                    <input class="form-control" disabled  type="text" required value = "@Html.DisplayFor(model => model.Assunto)" id="input-assunto">                 
                    
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label">Observações: </label>
                  <div class="col-lg-9">
                    <textarea disabled  class="form-control" id="input-obs" rows="5" cols="33">@Html.DisplayFor(model => model.Observacoes)
                    </textarea>
                  </div>
              </div>
              <div class="form-group row">
                  <label class="col-lg-3 col-form-label form-control-label">Tipo: </label>
                  <div class="col-lg-9">  
                       <select  class="form-control" disabled>
                        <option value="0">    @Html.DisplayFor(model => model.Tipo) </option>
                    </select>      
                </div>
            </div>
            <div class="form-group row">
                  <label class="col-lg-3 col-form-label form-control-label">Datas: </label>
                  <div class="col-lg-9">  
                       Data Cadastro
                    <input class="form-control" disabled  type="date" required value = "@Html.DisplayFor(model => model.DataEnvio).ToString()" >   
                    Data Alteração
                    <input class="form-control" disabled  type="date" required value = "@Html.DisplayFor(model => model.DataAlteracao).ToString()" >         
                </div>
            </div>
            
             <div class="form-group row">
                  <label class="col-lg-3 col-form-label form-control-label">Arquivo: </label>
                  <div class="col-lg-9">  
                       <b>Arquivo :</b> 
                         <p>
                     @if(Model.CaminhoArq == "" || Model.CaminhoArq == null){
                        <a asp-action="Edit" class="btn btn-info mr-2 "asp-route-id="@Model.Id"> Fazer Upload do arquivo</a> 
                     }else
                     {
                               @Html.ActionLink("Documento", "Download", new { Model.CaminhoArq})
                   
                     }
                    </p>    
                </div>
            </div>
            
                
            

         
      </div>
  </div>
<div>
   
     <div class="row">
        <a asp-action="Edit" class="btn btn-success mr-2 btn-lg"asp-route-id="@Model.Id">Editar</a> 
        <form asp-asp-action="Index">
        <button type="submit" asp-action="Index" class="btn btn-secondary  btn-lg">Voltar</button >
        </form>

</div>

    </div>
</div>

</div>










            
       


@{
    if(ViewBag.alterado)
    {
        @section Scripts
        {
            <script src="~/js/ModalScript/Modal.js"></script>
            <script>
                 let modal = document.getElementById('myModalSucess');
                 abrirModal(modal);
            </script>   
        }
    }
}

<!-- Modal HTML Sucesso -->
<div id="myModalSucess" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Sucesso </h4>
            </div>
            <div class="modal-body">
                <p>Tarefas realizadas com sucesso. </p>
                <p class="text-warning"><small>Formulário enviado com sucesso</small></p>
                <div Id="Resposta">
                    Documento enviado númeração:
                     @Html.DisplayFor(model => model.Numeracao)
                    /@Html.DisplayFor(model => model.Ano)
                </div>
                <div Id="Usuario">
                    Usuario de envio: 
                    @Html.DisplayFor(model => model.Usuario.user_nicename)
                </div>
            </div>
            <div class="modal-footer">
                <a type="submit" id="btnCreate" class="btn btn-default" ><button class='btn btn-danger'onClick="fecharModal(modal)">Fechar</button></a>
            </div>
        </div>
    </div>

        }

    }
}
