@model OficioMVC.Models.ViewModels.DocumentoViewModel;

@{
    ViewData["Title"] = ViewBag.TipoDoc;
    int typeId = ViewBag.typeId;
    string typeName = ViewBag.typeName;
}

<h2>@ViewData["Title"]</h2>

<h4>Documento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Documento.Assunto" class="control-label"></label>
                <input type="text" asp-for="Documento.Assunto" class="form-control" />
                <span asp-validation-for="Documento.Assunto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Documento.Observacoes" class="control-label"></label>
                <textarea asp-for="Documento.Observacoes"  class="form-control" rows="5" cols="33">
                </textarea>
                <span asp-validation-for="Documento.Observacoes" class="text-danger"></span>
            </div>
            @if (typeId == 0)
            {
                <div class="form-group">
                    <label asp-for="Documento.Tipo" class="control-label"></label>
                    <select asp-for="Documento.Tipo" class="form-control">
                        <option value="0">Edital</option>
                        <option value="1">Edital Interno</option>
                        <option value="2">Edital Externo</option>
                    </select>
                    <span asp-validation-for="Documento.Tipo" class="text-danger"></span>
                </div>
            }
            @if (typeId != 0)
            {
                <div class="form-group">
                    <label asp-for="Documento.Tipo" class="control-label"></label>
                    <select asp-for="Documento.Tipo" class="form-control" disabled>
                        <option value="@typeId" selected>@typeName</option>
                    </select>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" asp-controller="Documentos" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}