@model OficioMVC.Models.ViewModels.DocumentoViewModel;

@{
    ViewData["Title"] = ViewBag.TipoDoc;
    int typeId = ViewBag.typeId;
    string typeName = ViewBag.typeName;
}
<div class="col-md-8 offset-md-2">
    <h1 class="col-md-8 offset-md-3">Adicionar Documento</h1>
  <hr class="my-5">

  <!-- form user info -->
  <div class="card card-outline-secondary">
      <div class="card-header">
          <h3 class="mb-0">Novo Documento </h3>
      </div>
      <div class="card-body">
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label">Assunto</label>
                <div class="col-lg-9">   
                    <textarea asp-for="Documento.Assunto" class="form-control" id="input-obs" rows="5" cols="33" maxlength="2500">
                    </textarea>                 
                   
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label">Observações</label>
                  <div class="col-lg-9">
                    <textarea asp-for="Documento.Observacoes" class="form-control" id="input-obs" rows="5" cols="33"  maxlength="2500">
                    </textarea>
                  </div>
              </div>
              <div class="form-group row">
                  <label class="col-lg-3 col-form-label form-control-label">Tipo</label>
                  <div class="col-lg-9">        
                    @if (typeId == 0)
                    {
                    <div class="form-group">
                    
                    <select asp-for="Documento.Tipo" class="form-control">
                        <option value="0">Edital</option>
                        <option value="1">Edital Interno</option>
                        <option value="2">Edital Externo</option>
                    </select>
                    <span asp-validation-for="Documento.Tipo" class="text-danger"></span>
                </div>
            }
            @if (typeId != 0)
            {
                <div class="form-group">
                 
                    <select asp-for="Documento.Tipo" class="form-control" disabled>
                        <option value="@typeId" selected>@typeName</option>
                    </select>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-success" asp-controller="Documentos" />
            </div>
          </form>
      </div>
  </div>
<div>
    <form asp-asp-action="Index">
        <button type="submit" asp-action="Index" class="btn btn-secondary">Voltar</button >
    </form>
</div>

    </div>
</div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}