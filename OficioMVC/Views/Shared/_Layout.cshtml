@using OficioMVC.Controllers;
@{
    int ano = DateTime.Now.Year;
    ViewData["Ano"] = ano;

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OficioMVC</title>
        <script >
            window.onload = function () {
           if( window.location.href ==="https://localhost:44375" || window.location.href ==="https://localhost:44375/"  ){
             console.log("Passei aqui na url:" + window.location.href)
                $("#btn-login").show();
                $("#btn-logout").hide();
             }else{
                   console.log("Passei aqui na url:" + window.location.href)
               $("#btn-logout").show();
               $("#btn-login").hide();
             }
             }
           
        </script>

</head>
<body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <h5 class="my-0 mr-md-auto font-weight-normal"> <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">OficioMVC</a></h5>
        <nav class="my-2 my-md-0 mr-md-3">
            <a class="p-2 text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a class="p-2 text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
            <a class="p-2 text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>

        </nav>
       
            <a id="btn-logout" class="p-2 text-dark hidden" style="display:none"><button type="button" data-toggle="modal" data-target="#LogoutModal" class=" float-left  btn btn-outline-secondary hidden" >Logout</button></a>
        
        
        
        <a id="btn-login"class="p-2 text-dark" style="display:none" asp-area="" asp-controller="Home" asp-action="Login"><button type="button" d class=" float-left  btn btn-outline-primary" >Login</button></a>

        
    </div>
        
    <div class="modal fade" id="LogoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="Modaltitle">Deseja sair do sistema?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            
            <a asp-area="" asp-controller="Home" asp-action="Logout"> <input type="" class="btn btn-danger" value="Sair" ></a>
            <button type="button" class="btn btn-primary float-right" data-dismiss="modal" >Não, quero ficar!</button>
        </div>
      </div>
    </div>
  </div>
    <partial name="_CookieConsentPartial" />

    <div>
        @RenderBody()
        <hr />
        <footer >
            <p class="d-flex justify-content-center h-100">&copy; @ViewData["Ano"] - OficioMVC</p>
        </footer>
    </div>
    <link href="~/lib/fontawesome/css/fontawesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
